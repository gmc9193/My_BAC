

<div class="modal fade" id="alcoholModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Choose Your Drink</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label for="drinkType">Select Drink Type:</label>
                <select id="drinkType" class="form-control" @bind="selectedDrink">
                    <option value="liquor">Liquor</option>
                    <option value="beer">Beer</option>
                    <option value="wine">Wine</option>
                    <option value="cocktail">Cocktail</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="SelectDrink">Select</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string selectedDrink;

    [Parameter]
    public EventCallback<string> OnDrinkSelected { get; set; }

    private void SelectDrink()
    {
        OnDrinkSelected.InvokeAsync(selectedDrink);
    }
}
